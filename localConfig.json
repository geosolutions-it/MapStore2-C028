{
  "proxyUrl": {
    "url": "/mapstore2/proxy/?url=",
    "useCORS": []
  },
  "geoStoreUrl": "rest/geostore/",
  "printUrl": "http://geoserv02:8080/geoserver/pdf/info.json",
	"translationsPath": ["./MapStore2/web/client/translations", "./translations"],
  "mapquestApiKey": "__API_KEY_MAPQUEST__",
  "initialMapFilter": "",
  "ignoreMobileCss" : true,
  "useAuthenticationRules": true,
  "authenticationRules": [
    {
      "urlPattern": ".*geostore.*",
      "method": "basic"
    }, {
    "urlPattern": "\\/geoserver.*",
    "method": "authkey"
  }],
  "plugins": {
    "mobile": [
      {
        "name": "Map",
        "cfg": {
          "tools": ["locate"],
          "toolsOptions": {
            "measurement": {
              "leaflet": {
                "metric": true
              }
            }
          }
        }
      }, "DrawerMenu",
      {
        "name": "Identify",
        "showIn": ["Settings"],
        "cfg": {
          "style": {
            "position": "absolute",
            "width": "100%",
            "bottom": "0px",
            "zIndex": 1023,
            "maxHeight": "70%",
            "marginBottom": 0
          },
          "draggable": false,
          "collapsible": true,
          "viewerOptions": {
            "container": "{context.ReactSwipe}",
            "header": "{context.SwipeHeader}"
          },
          "bodyClass": "mobile-feature-info"
        }
      },
    {
      "name": "Locate",
      "override": {
        "Toolbar": {
          "alwaysVisible": true
        }
      }
    }, "Home", "TOC", {
      "name": "BackgroundSelector",
      "cfg": {
        "thumbs":{
          "bolzano":{
            "Cartografia:mosaico_2016": "assets/img/bolzano-2016.png",
            "Cartografia:ortofoto2014": "assets/img/bolzano-2014.png"
          }
        },
        "dimensions": {
          "side": 65,
          "sidePreview": 65,
          "frame": 3,
          "margin": 5,
          "label": false,
          "vertical": true
        }
      }
    }, {
      "name": "Settings",
      "cfg": {
        "wrap": true
      }
    },
    {
      "name": "MousePosition",
      "cfg": {
        "id": "mapstore-mouseposition-mobile"
      }
    },
    {
        "name": "Search",
        "cfg": {
          "searchOptions": {"services": [
            {
              "type": "bzVie",
              "displayName": "${properties.desc}",
              "subTitle": "Bolzano / Bozen",
              "options": {
                "protocol": "http",
                "host": "sit.comune.bolzano.it",
                "pathname": "/GeoInfo/VieServlet",
                "lang": "it"
              },
              "priority": 1,
              "nestedPlaceholderMsgId": "search.nestedPlaceholder",
              "geomService" : {
                "type": "wfs",
                "options": {
                  "url": "http://geoserv02:8080/geoserver/wfs",
                  "typeName": "ctn_base:grafo_vie",
                  "srsName": "EPSG:4326",
                  "staticFilter": "ID_STRASSE = ${properties.code}"
                }
              },
              "then" : [
                {
                  "type": "bzCivico",
                  "searchTextTemplate": "${properties.desc}",
                  "displayName": "${properties.desc}",
                  "subTitle": "Bolzano / Bozen",
                  "options": {
                    "protocol": "http",
                    "host": "sit.comune.bolzano.it",
                    "pathname": "/GeoInfo/CiviciServlet",
                    "idVia": "${properties.code}"
                  },
                "priority": 2,
                "geomService" : {
                  "type": "wfs",
                  "options": {
                    "url": "http://geoserv02:8080/geoserver/wfs",
                    "typeName": "Cartografia:civici",
                    "srsName": "EPSG:4326",
                    "staticFilter": "ID = ${properties.code}"
                  }
                }
              }]
            }
          ]},
          "withToggle": ["max-width: 768px", "min-width: 768px"]
        }
    }, {
      "name": "Toolbar",
      "id": "NavigationBar",
      "cfg": {
        "id": "navigationBar"
      }
    }, {
      "name": "Toolbar",
      "id": "IdentifyBar",
      "stateSelector": "identify",
      "cfg": {
        "id": "identifyBar"
      },
      "isDefault": false
    }, "ZoomAll",
    {
      "name": "MapLoading",
      "override": {
        "Toolbar": {
          "alwaysVisible": true
        }
      }
    }, "Login",
    "OmniBar", "BurgerMenu", "Expander"
  ],
